<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
	<div class="row panel">
		<div class="col-md-4 bg_blur ">
    	    <a href="#" class="follow_btn hidden-xs">Follow</a>
		</div>
    
        <div class="col-md-8  col-xs-12">
          <% @user.photos.each do |p| %>
            <%= image_tag p.image.url(:small), :class => "img-thumbnail picture hidden-xs" %>
          <% end %>
           <img src="http://lorempixel.com/output/people-q-c-100-100-1.jpg" class="img-thumbnail visible-xs picture_mob" />
           <div class="header">
                <h1> <%= @user.username %></h1>
                <h4> <%= @user.email %></h4>
                <span><%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Add Photo', new_photo_path %></span>
           </div>
        </div>
    </div>   
    
	<div class="row nav">    
        <div class="col-md-4"></div>
        <div class="col-md-8 col-xs-12" style="margin: 0px;padding: 0px;">
            <div class="col-md-4 col-xs-4 well"><i class="fa fa-weixin fa-lg"></i> 16</div>
            <div class="col-md-4 col-xs-4 well"><i class="fa fa-heart-o fa-lg"></i> 14</div>
            <div class="col-md-4 col-xs-4 well"><i class="fa fa-thumbs-o-up fa-lg"></i> 26</div>
        </div>
    </div>
</div>
  <div class="row nav">    
        <div class="col-md-1"></div>
        <div class="col-md-10">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Time</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Desc</th>
      
    </tr>
  </thead>
<tbody>
	<% @user.events.each do |u| %>
	<tr>
		<td><%= u.title %></td>
		<td><%= u.date %></td>
		<td><%= u.time %></td>
		<td><%= u.address %></td>
		<td><%= u.city %></td>
		<td><%= u.state %></td>
		<td><%= u.zip %></td>
		<td><%= u.desc %></td>
	</tr>
	<% end %>
</tbody>
</table>
</div>
<div class="col-md-1"></div>


