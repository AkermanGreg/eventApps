<div class="container-fluid">
  <div class="row">
   
  <div class="col-md-4"></div>
  <div class="col-md-4">
		<h1>New user</h1>
		
		<%= form_for @user, :html => { :class => 'form-vertical' }  do |f| %>
       	 	<%= f.text_field :username, placeholder: "Username", :class => 'form-control' %><br />
        	<%= f.text_field :email, placeholder: "Email", :class => 'form-control' %><br />
        	 <%= f.text_field :password,  placeholder: "Password", :class => 'form-control' %><br />
        	<%= f.text_field :password_confirmation, placeholder: "Password Confirmation", :class => 'form-control' %><br /> 
  			<%= f.submit "Sign Up", :class => 'btn btn-primary btn-lg btn-block' %>
  		<% end %>

		<%= link_to 'Back', users_path %>
	 </div>
  <div class="col-md-4"></div>
</div>