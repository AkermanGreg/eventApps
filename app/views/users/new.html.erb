<div class="row">
	<div class="form-group col-md-3"></div>

   	<div class="form-group col-md-4">
		<h1>New user</h1>

		<%= form_for @user, :html => { :class => 'form-vertical' }  do |f| %>
       	 	Username: <%= f.text_field :username, :class => 'form-control' %><br />
        	Email: <%= f.text_field :email, :class => 'form-control' %><br />
        	Password: <%= f.text_field :password, :class => 'form-control' %><br />
        	Password Confirmation: <%= f.text_field :password_confirmation, :class => 'form-control' %><br /> 
  			<%= f.submit "Sign Up", :class => 'btn btn-primary btn-lg btn-block' %>
  		<% end %>

		<%= link_to 'Back', users_path %>
	</div>
	
	<div class="form-group col-md-3"></div>
</div>