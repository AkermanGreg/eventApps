<div class="container-fluid">
  <div class="row">
   
  <div class="col-md-1"></div>
  <div class="col-md-10">

<% if flash[:notice] %>
	<div class="alert alert-danger"><%= flash[:notice] %></div>
	<% end %>
<br /><br />

  
<div class="col-sm-6 col-md-4 col-md-offset-4">
	<div class="panel panel-default">
		<div class="panel-heading">
			<strong> <h2>Sign in to continue</h2></strong>
		</div>
		<div class="panel-body">
				<%= form_for @user, :html => { :class => 'form-vertical' }  do |f| %>
				<fieldset>
					<div class="row">
						<div class="center-block">
							<img class="profile-img"
								src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12 col-md-10  col-md-offset-1 ">
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-user"></i>
									</span> 
									<%= f.text_field :username, placeholder: "Username", :class => 'form-control' %>
									
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-lock"></i>
									</span>
									<%= f.text_field :email,  placeholder: "Email", :class => 'form-control' %>
								
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-lock"></i>
									</span>
									<%= f.password_field :password,  placeholder: "Password", :class => 'form-control' %>
								
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-lock"></i>
									</span>
									<%= f.password_field :password_confirmation,  placeholder: "Password Confirmation", :class => 'form-control' %>
								
								</div>
							</div>
							<div class="form-group">
								<%= f.submit "Sign Up", :class => 'bbtn btn-lg btn-primary btn-block' %>
								<% end %>
							</div>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
		<div class="panel-footer ">
			Don't have an account! <a href="#" onClick=""> Sign Up Here </a><br />
			<%= link_to 'Back', users_path %>
		</div>
    </div>
</div>
	





		

		
	 </div>
  <div class="col-md-1"></div>
</div>