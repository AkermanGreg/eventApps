<div class="row">
  <div class="form-group col-md-3"></div>

    <div class="form-group col-md-4">
        <h1>Log In</h1>
        <%= form_for(@user, {url: sessions_path})   do |f| %>

          Username: <%= f.text_field :username, :class => 'form-control' %>
          E-mail: <%= f.text_field :email, :class => 'form-control' %>
          Password: <%= f.password_field :password, :class => 'form-control' %>

          <%= f.submit "Login", :class => 'btn btn-primary btn-lg btn-block' %>
        <% end %>
        <%= link_to 'Back', users_path %>
    </div>
  
  <div class="form-group col-md-3"></div>
</div>





