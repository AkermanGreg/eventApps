<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">

      <div class="page-header">
        <h1>Edit Event</h1>
      </div>

      <%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %> 
        Title: <%= f.text_field :title, :class => 'form-control' %><br />   
        Date: <%= f.text_field :date, :data => {:provide => 'datepicker'}, :class => 'form-control'%><br />
        Time: <%= f.text_field :time, :class => 'form-control'%><br />
        Address: <%= f.text_field :address, :class => 'form-control' %><br /> 
        City: <%= f.text_field :city, :class => 'form-control' %><br />   
        State: <%= f.text_field :state, :class => 'form-control' %><br />
        Zipcode: <%= f.text_field :zip, :class => 'form-control' %><br />  
        Description: <%= f.text_area :desc, :class => 'form-control' %><br />
  
        <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn' %>
        </div>
      <% end %>
      
    </div>

    <div class="page-header">
      <h1>Map</h1>
    </div>

    <div class="col-md-9">
      <%= render 'layouts/map' %>
    </div>
  </div>
</div>

