
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">

      <div class="page-header">
        <h1>New Event</h1>
      </div>
   <!-- invalid edit -->
    <% if flash[:notice] %>
      <div class="alert alert-danger"><%= flash[:notice] %></div>
    <% end %>

    <!-- successfull edit -->
    <% if flash[:alert] %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <%= flash[:alert] %>
      </div>
    <% end %>
      <%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %> 
        Title: <%= f.text_field :title, :class => 'form-control' %><br />   
        Date: <%= f.text_field :date, :data => {:provide => 'datepicker'}, :class => 'form-control'%><br />
        Time: <%= f.text_field :time, :class => 'form-control'%><br />
        Address: <%= f.text_field :address, :class => 'form-control' %><br /> 
        City: <%= f.text_field :city, :class => 'form-control' %><br />   
        State: <%= f.text_field :state, :class => 'form-control' %><br />
        Zipcode: <%= f.number_field :zip, :class => 'form-control' %><br />  
        Description: <%= f.text_area :desc, :class => 'form-control' %><br />
  
        <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to "Cancel", events_path, :class => 'btn' %>

         
        </div>
      <% end %>
      
    </div>

    <div class="page-header">
      <h1>Map</h1>
    </div>

    <div class="col-md-9">
      <%= render 'layouts/map' %>
    </div>
  </div>
</div>


